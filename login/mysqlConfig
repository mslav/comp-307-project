CREATE DATABASE `USER_BASE`;
CREATE DATABASE `USER_EVENTS`;

CREATE USER 'comp307'@'localhost' IDENTIFIED BY 'password';
GRANT CREATE, SELECT, INSERT, UPDATE ON `USER_BASE`.* TO 'comp307'@'localhost';
GRANT CREATE, SELECT, INSERT, UPDATE ON `USER_EVENTS`.* TO 'comp307'@'localhost';

CREATE TABLE `USER_BASE`.`USERS` (
    `id` INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    `username` VARCHAR(30) NOT NULL,
    `email` VARCHAR(50) NOT NULL,
    `password` CHAR(128) NOT NULL
);

CREATE TABLE `USER_BASE`.`ATTEMPTS` (
    `username` VARCHAR(30) NOT NULL,
    `number` INT(11) NOT NULL
);

